@model PetCare_system.Models.Pet_Boarding
@{
    ViewData["Title"] = "Booking Confirmation";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] | Paws & Relax</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #3a86ff;
            --secondary: #8338ec;
            --accent: #ff006e;
            --light: #f8f9fa;
            --dark: #212529;
            --success: #38b000;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: #f5f7ff;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .confirmation-card {
            width: 100%;
            max-width: 700px;
            background: white;
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
            overflow: hidden;
            position: relative;
        }

        .confirmation-header {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: white;
            padding: 30px;
            text-align: center;
            position: relative;
        }

            .confirmation-header::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: url('https://images.unsplash.com/photo-1586671267731-da2cf3ceeb80?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80') center/cover;
                opacity: 0.15;
            }

            .confirmation-header h1 {
                position: relative;
                font-size: 28px;
                margin-bottom: 10px;
            }

            .confirmation-header p {
                position: relative;
                opacity: 0.9;
                font-size: 16px;
            }

        .confirmation-body {
            padding: 30px;
        }

        .confirmation-icon {
            width: 80px;
            height: 80px;
            background-color: rgba(56, 176, 0, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: -65px auto 20px;
            border: 4px solid white;
            position: relative;
        }

            .confirmation-icon i {
                color: var(--success);
                font-size: 36px;
            }

        .booking-details {
            margin-bottom: 30px;
        }

        .detail-row {
            display: flex;
            padding: 12px 0;
            border-bottom: 1px solid #f0f0f0;
        }

            .detail-row:last-child {
                border-bottom: none;
            }

        .detail-label {
            font-weight: 600;
            color: var(--primary);
            min-width: 150px;
        }

        .detail-value {
            color: #555;
        }

        .confirmation-message {
            background-color: rgba(56, 176, 0, 0.05);
            border-left: 4px solid var(--success);
            padding: 15px;
            border-radius: 0 8px 8px 0;
            margin: 25px 0;
        }

            .confirmation-message p {
                margin-bottom: 8px;
                color: #444;
            }

                .confirmation-message p:last-child {
                    margin-bottom: 0;
                }

        .action-buttons {
            display: flex;
            gap: 15px;
            margin-top: 30px;
            flex-wrap: wrap;
            justify-content: center;
        }

        .btn {
            padding: 12px 24px;
            border-radius: 50px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            cursor: pointer;
            border: none;
        }

        .btn-primary {
            background-color: var(--primary);
            color: white;
            box-shadow: 0 4px 15px rgba(58, 134, 255, 0.3);
        }

            .btn-primary:hover {
                background-color: #2a75e6;
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(58, 134, 255, 0.4);
            }

        .btn-outline {
            background-color: white;
            color: var(--primary);
            border: 2px solid var(--primary);
        }

            .btn-outline:hover {
                background-color: rgba(58, 134, 255, 0.05);
            }

        .btn i {
            margin-right: 8px;
        }

        @@media (max-width: 768px) {
            .detail-row {
                flex-direction: column;
                gap: 5px;
            }

            .detail-label {
                min-width: unset;
            }

            .action-buttons {
                flex-direction: column;
                gap: 10px;
            }

            .btn {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="confirmation-card">
        <div class="confirmation-header">
            <h1>Booking Confirmed!</h1>
            <p>Your pet's stay is all set up with us</p>
        </div>

        <div class="confirmation-body">
            <div class="confirmation-icon">
                <i class="fas fa-check"></i>
            </div>

            <div class="booking-details">
                <div class="detail-row">
                    <span class="detail-label">Booking Reference:</span>
                    <span class="detail-value">#@Model.board_Id</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Owner Name:</span>
                    <span class="detail-value">@Model.OwnerName</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Pet Name:</span>
                    <span class="detail-value">@Model.PetName</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Check-In Date:</span>
                    <span class="detail-value">@Model.CheckInDate.ToShortDateString()</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Check-Out Date:</span>
                    <span class="detail-value">@Model.CheckOutDate.ToShortDateString()</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Package:</span>
                    <span class="detail-value">@Model.Package</span>
                </div>
            </div>

            <div class="confirmation-message">
                <p><i class="fas fa-envelope"></i> A confirmation has been sent to your email.</p>
                <p><i class="fas fa-phone"></i> Our team will contact you if we need any additional information.</p>
            </div>

            <div class="action-buttons">
                <a href="/" class="btn btn-primary">
                    <i class="fas fa-home"></i> Return to Home
                </a>
                <a href="@Url.Action("Create", "PaymentForBoard", new { boardingId = Model.board_Id })" class="btn btn-outline">
                    <i class="fas fa-credit-card"></i> Make Payment
                </a>
            </div>
        </div>
    </div>

