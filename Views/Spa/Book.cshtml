@model PetCare_system.Models.SpaBookingViewModel

@{
    ViewBag.Title = "Book Spa Service";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>Select Service</h4>
        <div class="form-group">
            @Html.LabelFor(model => model.Service.SpaServiceId, "Service", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Service.SpaServiceId,
                    new SelectList(Model.AvailableServices, "SpaServiceId", "NameWithPrice"),
                    "-- Select Service --",
                    new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Service.SpaServiceId, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <h4>Pet Information</h4>
        <div class="form-group">
            @Html.LabelFor(model => model.Booking.PetName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Booking.PetName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Booking.PetName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Booking.PetType, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Booking.PetType,
                    new SelectList(new[] { "Dog", "Cat", "Other" }),
                    "-- Select Pet Type --",
                    new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Booking.PetType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Booking.BookingDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Booking.BookingDate, new { htmlAttributes = new { @class = "form-control", type = "datetime-local" } })
                @Html.ValidationMessageFor(model => model.Booking.BookingDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Booking.SpecialInstructions, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Booking.SpecialInstructions, new { @class = "form-control", rows = "3" })
                @Html.ValidationMessageFor(model => model.Booking.SpecialInstructions, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Book Now" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}