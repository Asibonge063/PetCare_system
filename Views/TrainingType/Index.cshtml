@model IEnumerable<PetCare_system.Models.TrainingType>
@{
    ViewBag.Title = "Training Types";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .container {
            max-width: 960px;
            margin-top: 50px;
            margin-bottom: 50px;
        }

        .card {
            border: none;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            font-size: 1.2rem;
            background-color: #007bff;
            color: white;
            padding: 15px;
            border-radius: 8px 8px 0 0;
        }

        .card-body {
            font-size: 1rem;
            padding: 20px;
        }

        .btn {
            font-size: 1.1rem;
            padding: 10px;
            margin-right: 10px;
        }

        .btn-lg {
            font-size: 1.2rem;
            padding: 12px;
        }

        h2 {
            font-size: 2rem;
            margin-bottom: 20px;
        }

        .text-center {
            text-align: center;
        }

        .shadow-sm {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <h2 class="text-center mb-4">Training Types</h2>

        <div class="row">
            @foreach (var type in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-header">
                            <h5 class="card-title">@type.Name</h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Description:</strong> @type.Description</p>
                            <p><strong>Duration:</strong> @type.DefaultDuration minutes</p>
                            <p><strong>Cost:</strong> R @type.DefaultCost</p>
                            <a href="@Url.Action("Details", new { id = type.TrainingTypeId })" class="btn btn-info btn-sm">View Details</a>
                            <a href="@Url.Action("Edit", new { id = type.TrainingTypeId })" class="btn btn-warning btn-sm">Edit</a>
                            <a href="@Url.Action("Delete", new { id = type.TrainingTypeId })" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <a href="@Url.Action("Create")" class="btn btn-success btn-lg">Add New Training Type</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
