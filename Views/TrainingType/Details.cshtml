@model PetCare_system.Models.TrainingType
@{
    ViewBag.Title = "Training Type Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .container {
            max-width: 960px;
            margin-top: 50px;
            margin-bottom: 50px;
        }

        .card {
            border: none;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            font-size: 1.2rem;
            background-color: #007bff;
            color: white;
            padding: 15px;
            border-radius: 8px 8px 0 0;
        }

        .card-body {
            font-size: 1rem;
            padding: 20px;
        }

        .btn {
            font-size: 1.1rem;
            padding: 10px;
            margin-right: 10px;
        }

        .text-center {
            text-align: center;
        }

        .shadow-sm {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <h2 class="text-center mb-4">Training Type Details</h2>

        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="card-title">@Model.Name</h5>
            </div>
            <div class="card-body">
                <p><strong>Description:</strong> @Model.Description</p>
                <p><strong>Duration:</strong> @Model.DefaultDuration minutes</p>
                <p><strong>Cost:</strong>R @Model.DefaultCost</p>
                <a href="@Url.Action("Edit", new { id = Model.TrainingTypeId })" class="btn btn-warning btn-sm">Edit</a>
                <a href="@Url.Action("Index")" class="btn btn-secondary btn-sm">Back to List</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
