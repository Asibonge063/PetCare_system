@model PetCare_system.Models.Spar_Grooming
@{
    ViewBag.Title = "Payment Receipt - Paws & Relax";
}
@using System.Globalization
@{
    var culture = new CultureInfo("en-ZA"); // South African culture
}

<div class="receipt-container">
    <!-- Receipt Header -->
    <div class="receipt-header">
        <div class="logo">
            <i class="fas fa-paw"></i>
            <h2>Paws & Relax</h2>
            <p class="tagline">Premium Pet Spa & Grooming</p>
        </div>
        <div class="contact-info">
            <p><i class="fas fa-map-marker-alt"></i> 123 Pet Care Avenue, Anytown</p>
            <p><i class="fas fa-phone"></i> (555) 123-4567</p>
            <p><i class="fas fa-envelope"></i> contact@pawsandrelax.com</p>
        </div>
    </div>

    <!-- Receipt Details -->
    <div class="receipt-body">
        <div class="receipt-meta">
            <div class="meta-item">
                <span class="meta-label">Receipt #</span>
                <span class="meta-value">@Model.TransactionId</span>
            </div>
            <div class="meta-item">
                <span class="meta-label">Date</span>
                <span class="meta-value">@Model.PaymentDate.Value.ToString("f")</span>
            </div>
            <div class="meta-item">
                <span class="meta-label">Booking #</span>
                <span class="meta-value">@Model.BookingId</span>
            </div>
        </div>

        <div class="customer-info">
            <h3><i class="fas fa-user"></i> Customer Information</h3>
            <div class="info-grid">
                <div class="info-item">
                    <span class="info-label">Name</span>
                    <span class="info-value">@Model.OwnerName</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Email</span>
                    <span class="info-value">@Model.Email</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Pet Name</span>
                    <span class="info-value">@Model.PetName</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Pet Type</span>
                    <span class="info-value">@Model.PetType</span>
                </div>
            </div>
        </div>

        <!-- Service Details -->
        <div class="service-details">
            <h3><i class="fas fa-clipboard-list"></i> Service Details</h3>
            <div class="service-item">
                <span class="service-name">@Model.ServiceType</span>
                <span class="service-price">@Model.BasePrice.ToString("C", culture)</span>
            </div>

            @if (Model.AddOnPrice > 0)
            {
                <div class="addons-section">
                    <h4>Add-on Services</h4>
                    @if (Model.AddOnServices.HasFlag(PetCare_system.Models.AddOnServices.FleaTreatment))
                    {
                        <div class="service-item">
                            <span class="service-name">Flea Treatment</span>
                            <span class="service-price">R25.00</span>
                        </div>
                    }
                    @if (Model.AddOnServices.HasFlag(PetCare_system.Models.AddOnServices.DeShedding))
                    {
                        <div class="service-item">
                            <span class="service-name">De-shedding</span>
                            <span class="service-price">R30.00</span>
                        </div>
                    }
                    @if (Model.AddOnServices.HasFlag(PetCare_system.Models.AddOnServices.TeethCleaning))
                    {
                        <div class="service-item">
                            <span class="service-name">Teeth Cleaning</span>
                            <span class="service-price">R50.00</span>
                        </div>
                    }
                </div>
            }
        </div>

        <!-- Payment Summary -->
        <div class="payment-summary">
            <div class="summary-row total">
                <span class="summary-label">Total Amount</span>
                <span class="summary-value">@Model.TotalPrice.ToString("C", culture)</span>
            </div>
            <div class="summary-row">
                <span class="summary-label">Payment Method</span>
                <span class="summary-value">@Model.PaymentMethod</span>
            </div>
            <div class="summary-row">
                <span class="summary-label">Payment Status</span>
                <span class="summary-value success">@Model.PaymentStatus</span>
            </div>
            <div class="summary-row">
                <span class="summary-label">Appointment Date</span>
                <span class="summary-value">@Model.PreferredDate.ToShortDateString() @Model.PreferredTime</span>
            </div>
        </div>

        <!-- Thank You Message -->
        <div class="thank-you">
            <div class="thank-you-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <h3>Thank You for Your Payment!</h3>
            <p>Your booking is confirmed. A receipt has been sent to @Model.Email</p>
        </div>
    </div>

    <!-- Receipt Footer -->
    <div class="receipt-footer">
        <p>We look forward to seeing you and @Model.PetName!</p>
        <p class="business-info">
            <strong>Paws & Relax</strong> |
            <i class="fas fa-phone"></i> (555) 123-4567 |
            <i class="fas fa-envelope"></i> contact@pawsandrelax.com
        </p>
    </div>
</div>

<!-- Action Buttons -->
<div class="action-buttons">
    <a href="@Url.Action("PrintReceipt", new { id = Model.BookingId })" class="btn-print" target="_blank">
        <i class="fas fa-print"></i> Print Receipt
    </a>
    <a href="@Url.Action("Index", "Home")" class="btn-home">
        <i class="fas fa-home"></i> Back to Home
    </a>
</div>

@section Styles {
    <style>
        /* Font Awesome */
        @@import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css');

        /* Main Receipt Container */
        .receipt-container {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            border-radius: 10px;
            box-shadow: 0 5px 30px rgba(0,0,0,0.1);
            overflow: hidden;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
            line-height: 1.6;
        }

        /* Receipt Header */
        .receipt-header {
            background: linear-gradient(135deg, #6a4c93, #8a5a44);
            color: white;
            padding: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
        }

        .logo {
            text-align: center;
            margin-bottom: 20px;
        }

            .logo i {
                font-size: 3rem;
                margin-bottom: 10px;
                color: #ffd166;
            }

            .logo h2 {
                margin: 0;
                font-size: 2rem;
                font-weight: 700;
            }

        .tagline {
            font-style: italic;
            opacity: 0.8;
            margin: 5px 0 0;
        }

        .contact-info {
            text-align: right;
        }

            .contact-info p {
                margin: 5px 0;
                font-size: 0.9rem;
            }

            .contact-info i {
                margin-right: 8px;
                width: 20px;
                text-align: center;
                color: #ffd166;
            }

        /* Receipt Body */
        .receipt-body {
            padding: 30px;
        }

        /* Receipt Meta */
        .receipt-meta {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 1px dashed #ddd;
        }

        .meta-item {
            flex: 1;
            min-width: 150px;
        }

        .meta-label {
            display: block;
            font-weight: 600;
            color: #666;
            font-size: 0.9rem;
        }

        .meta-value {
            display: block;
            font-size: 1.1rem;
            margin-top: 5px;
        }

        /* Customer Info */
        .customer-info {
            margin-bottom: 30px;
        }

            .customer-info h3 {
                color: #6a4c93;
                margin-bottom: 20px;
                font-size: 1.3rem;
            }

                .customer-info h3 i {
                    margin-right: 10px;
                    color: #6a4c93;
                }

        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
        }

        .info-item {
            margin-bottom: 10px;
        }

        .info-label {
            display: block;
            font-weight: 600;
            color: #666;
            font-size: 0.9rem;
        }

        .info-value {
            display: block;
            font-size: 1rem;
        }

        /* Service Details */
        .service-details {
            margin-bottom: 30px;
        }

            .service-details h3 {
                color: #6a4c93;
                margin-bottom: 20px;
                font-size: 1.3rem;
            }

                .service-details h3 i {
                    margin-right: 10px;
                    color: #6a4c93;
                }

        .service-item {
            display: flex;
            justify-content: space-between;
            padding: 12px 0;
            border-bottom: 1px solid #eee;
        }

        .service-name {
            font-weight: 500;
        }

        .service-price {
            font-weight: 600;
        }

        .addons-section {
            margin-top: 20px;
        }

            .addons-section h4 {
                color: #555;
                margin-bottom: 15px;
                font-size: 1.1rem;
            }

        /* Payment Summary */
        .payment-summary {
            background: #f9f5ff;
            border-radius: 8px;
            padding: 20px;
            margin: 30px 0;
        }

        .summary-row {
            display: flex;
            justify-content: space-between;
            padding: 10px 0;
        }

            .summary-row.total {
                border-top: 2px solid #6a4c93;
                padding-top: 15px;
                margin-top: 10px;
            }

        .summary-label {
            font-weight: 600;
        }

        .summary-value {
            font-weight: 500;
        }

        .summary-row.total .summary-value {
            font-weight: 700;
            color: #6a4c93;
            font-size: 1.2rem;
        }

        .success {
            color: #28a745;
            font-weight: 600;
        }

        /* Thank You Section */
        .thank-you {
            text-align: center;
            margin: 40px 0 30px;
            padding: 20px;
            background: #f0f9f0;
            border-radius: 8px;
        }

        .thank-you-icon {
            font-size: 3rem;
            color: #28a745;
            margin-bottom: 15px;
        }

        .thank-you h3 {
            color: #28a745;
            margin-bottom: 10px;
        }

        /* Receipt Footer */
        .receipt-footer {
            text-align: center;
            padding: 20px;
            background: #f5f5f5;
            border-top: 1px solid #eee;
        }

            .receipt-footer p {
                margin: 5px 0;
            }

        .business-info {
            font-size: 0.9rem;
            color: #666;
        }

            .business-info i {
                margin: 0 5px;
            }

        /* Action Buttons */
        .action-buttons {
            text-align: center;
            margin: 30px auto;
            max-width: 800px;
        }

        .btn-print, .btn-home {
            display: inline-block;
            padding: 12px 30px;
            margin: 0 10px;
            border-radius: 50px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s;
        }

        .btn-print {
            background: #6a4c93;
            color: white;
            border: 2px solid #6a4c93;
        }

            .btn-print:hover {
                background: #5a3d83;
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(106, 76, 147, 0.3);
            }

        .btn-home {
            background: white;
            color: #6a4c93;
            border: 2px solid #6a4c93;
        }

            .btn-home:hover {
                background: #f5f0ff;
                transform: translateY(-3px);
            }

            .btn-print i, .btn-home i {
                margin-right: 8px;
            }

        /* Print-specific styles */
        @@media print {
            body {
                background: none;
                padding: 0;
                margin: 0;
            }

            .receipt-container {
                box-shadow: none;
                border-radius: 0;
                max-width: 100%;
            }

            .action-buttons {
                display: none;
            }
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .receipt-header {
                flex-direction: column;
                text-align: center;
            }

            .contact-info {
                text-align: center;
                margin-top: 20px;
            }

            .info-grid {
                grid-template-columns: 1fr;
            }

            .btn-print, .btn-home {
                display: block;
                width: 100%;
                margin: 10px 0;
            }
        }
    </style>
}
@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Print button functionality
            document.querySelector('.btn-print').addEventListener('click', function (e) {
                e.preventDefault();

                // Store the original content
                const originalContent = document.body.innerHTML;

                // Get the receipt content
                const receiptContent = document.querySelector('.receipt-container').outerHTML;

                // Replace the body content with just the receipt
                document.body.innerHTML = receiptContent;

                // Add a print-specific style
                const style = document.createElement('style');
                style.innerHTML = `
                                @@page {
                                    size: auto;
                                    margin: 10mm;
                                }
                                body {
                                    margin: 0;
                                    padding: 0;
                                    background: white;
                                }
                                .action-buttons {
                                    display: none !important;
                                }
                            `;
                document.head.appendChild(style);

                // Print the window
                window.print();

                // Restore the original content
                document.body.innerHTML = originalContent;

                // Re-attach event listeners if needed
                window.location.href = this.href;
            });

            // Alternatively, you can use a simpler approach if you prefer:
            // document.querySelector('.btn-print').addEventListener('click', function(e) {
            //     e.preventDefault();
            //     window.print();
            // });
        });
    </script>
}
}