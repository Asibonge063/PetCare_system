@model IEnumerable<PetCare_system.Models.GroomingStaff>
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Groomers with Assigned Sessions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1"><i class="fas fa-cut me-2 text-primary"></i>@ViewBag.Title</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                 
                    <li class="breadcrumb-item active" aria-current="page">Groomers</li>
                </ol>
            </nav>
        </div>

        <div class="d-flex align-items-center">
            <div class="dropdown me-3">
                <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user-circle me-2"></i>
                    <span class="fw-medium">@User.Identity.GetUserName()</span>
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                    <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Profile</a></li>
                  
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { id = "logoutForm" }))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="dropdown-item text-danger">
                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                            </button>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-list me-2 text-secondary"></i>Groomer Assignments</h5>
                <div>
                   
                   
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Groomer</th>
                            <th>Contact</th>
                            <th>Assigned Sessions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var groomer in Model)
                        {
                            <tr>
                                <td class="ps-4 align-middle">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar avatar-sm me-3 bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-0">@groomer.Groom_Name @groomer.Groom_Surname</h6>
                                            <small class="text-muted">ID: @groomer.GroomStaffId</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="align-middle">
                                    <a href="mailto:@groomer.Groom_Email" class="text-reset">
                                        <i class="fas fa-envelope me-2 text-muted"></i>@groomer.Groom_Email
                                    </a>
                                </td>
                                <td>
                                    @if (groomer.SparGroomings != null && groomer.SparGroomings.Any())
                                    {
                                        <div class="accordion" id="sessions-@groomer.GroomStaffId">
                                            @foreach (var session in groomer.SparGroomings)
                                            {
                                                <div class="accordion-item border-0 mb-2">
                                                    <div class="accordion-header">
                                                        <div class="card shadow-sm">
                                                            <div class="card-body p-3">
                                                                <div class="d-flex justify-content-between align-items-center">
                                                                    <div class="d-flex align-items-center">
                                                                        <span class="badge bg-primary bg-opacity-10 text-primary me-3">
                                                                            <i class="fas fa-paw me-1"></i> @session.PetName
                                                                        </span>
                                                                        <small class="text-muted me-3">
                                                                            <i class="far fa-calendar me-1"></i> @session.PreferredDate.ToString("MMM dd, yyyy")
                                                                        </small>
                                                                        <span class="badge @GetServiceTypeBadgeClass(session.ServiceType.ToString())">
                                                                            @session.ServiceType
                                                                        </span>
                                                                    </div>
                                                                    <div>
                                                                        
                                                                        @Html.ActionLink("Report", "Report", "GroomingStaffs",
                                                                            new { bookingId = session.BookingId },
                                                                            new { @class = "btn btn-sm btn-primary" })
                                                                    </div>
                                                                </div>
                                                                @if (!string.IsNullOrEmpty(session.SpecialInstructions))
                                                                {
                                                                    <div class="mt-2 ps-4">
                                                                        <small class="text-muted">
                                                                            <i class="fas fa-info-circle me-1"></i> @session.SpecialInstructions
                                                                        </small>
                                                                    </div>
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-center py-3">
                                            <i class="fas fa-calendar-times fa-2x text-muted mb-2"></i>
                                            <p class="text-muted mb-0">No sessions assigned</p>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetServiceTypeBadgeClass(string serviceType)
    {
        switch (serviceType)
        {
            case "BasicGrooming":
                return "bg-info bg-opacity-10 text-info";
            case "FullGroomingPackage":
                return "bg-success bg-opacity-10 text-success";
            case "DeluxeSpaTreatment":
                return "bg-warning bg-opacity-10 text-warning";
            case "PuppyKittenFirstVisit":
                return "bg-primary bg-opacity-10 text-primary";
            case "SpecialtyCuts":
                return "bg-purple bg-opacity-10 text-purple";
            default:
                return "bg-secondary bg-opacity-10 text-secondary";
        }
    }
}

@section Scripts {
    <script>
        // Logout confirmation
        document.getElementById('logoutForm')?.addEventListener('submit', function (e) {
            if (!confirm('Are you sure you want to log out?')) {
                e.preventDefault();
            }
        });

        // Initialize tooltips
        $(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}

<style>
    .avatar {
        width: 36px;
        height: 36px;
        display: inline-flex;
    }

    .bg-purple {
        background-color: #6f42c1;
    }

    .text-purple {
        color: #6f42c1;
    }

    .card {
        border: none;
        border-radius: 0.5rem;
    }

    .accordion-item {
        background: transparent;
    }

    .table th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.5px;
        border-top: none;
    }

    .badge {
        font-weight: 500;
        padding: 0.35em 0.65em;
    }

    .breadcrumb {
        background: transparent;
        padding: 0;
        font-size: 0.875rem;
    }
</style>