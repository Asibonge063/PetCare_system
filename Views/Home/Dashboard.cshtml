        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="header">
                <h2>Admin Dashboard</h2>
                <div class="user-profile">
                    <div class="user-info">
                        <p class="user-name">@User.Identity.Name</p>
                        <p class="user-role">Administrator</p>
