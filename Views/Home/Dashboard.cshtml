@using PetCare_system.Models
@{
    ViewBag.Title = "Admin Dashboard";
    var db = new ApplicationDbContext();

    // Get stats data
    var totalDoctors = db.Doctors.Count();
    var totalConsultations = db.Vet_Consultations.Count();
    var pendingConsultations = db.Vet_Consultations.Count(c => c.Feedback == "Pending");
    var recentConsultations = db.Vet_Consultations
        .OrderByDescending(c => c.Consult_Date)
        .Take(5)
        .ToList();
    var recentDoctors = db.Doctors
        .OrderByDescending(d => d.Id)
        .Take(3)
        .ToList();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #4361ee;
            --primary-light: #e6e9ff;
            --secondary-color: #3a0ca3;
            --accent-color: #f72585;
            --success-color: #4cc9f0;
            --warning-color: #f8961e;
            --danger-color: #ef233c;
            --sidebar-bg: #1a1a2e;
            --sidebar-hover: #16213e;
            --content-bg: #f8f9ff;
            --card-bg: #ffffff;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--content-bg);
            overflow-x: hidden;
            margin: 0;
            padding: 0;
            height: 100vh;
        }

        .app-container {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar with Glass Morphism Effect */
        .sidebar {
            width: 280px;
            background: rgba(26, 26, 46, 0.9);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            color: white;
            padding-top: 20px;
            transition: all 0.3s;
            box-shadow: 5px 0 15px rgba(0, 0, 0, 0.1);
            z-index: 1000;
            position: relative;
        }

        .sidebar-header {
            padding: 0 20px 20px;
            text-align: center;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

            .sidebar-header h4 {
                font-weight: 700;
                margin-bottom: 5px;
                background: linear-gradient(to right, #fff, #ddd);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }

            .sidebar-header p {
                font-size: 0.8rem;
                opacity: 0.8;
                margin-bottom: 0;
            }

        .sidebar-menu {
            padding: 20px 0;
        }

            .sidebar-menu a {
                padding: 14px 25px;
                display: flex;
                align-items: center;
                color: rgba(255, 255, 255, 0.8);
                text-decoration: none;
                transition: all 0.3s;
                margin: 5px 15px;
                border-radius: 8px;
                position: relative;
                overflow: hidden;
            }

                .sidebar-menu a::before {
                    content: '';
                    position: absolute;
                    left: 0;
                    top: 0;
                    width: 3px;
                    height: 100%;
                    background: var(--accent-color);
                    transform: scaleY(0);
                    transition: transform 0.3s;
                }

                .sidebar-menu a:hover {
                    background: var(--sidebar-hover);
                    color: white;
                    transform: translateX(5px);
                }

                    .sidebar-menu a:hover::before {
                        transform: scaleY(1);
                    }

                .sidebar-menu a.active {
                    background: var(--sidebar-hover);
                    color: white;
                    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
                }

                    .sidebar-menu a.active::before {
                        transform: scaleY(1);
                    }

            .sidebar-menu i {
                width: 24px;
                margin-right: 12px;
                text-align: center;
                font-size: 1.1rem;
            }

        .logout-btn {
            position: absolute;
            bottom: 0;
            width: 100%;
            padding: 15px;
            text-align: center;
            background: rgba(0, 0, 0, 0.2);
            transition: all 0.3s;
        }

            .logout-btn:hover {
                background: rgba(0, 0, 0, 0.3);
            }

            .logout-btn a {
                color: white;
                text-decoration: none;
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 8px;
            }

        /* Main Content Area */
        .main-content {
            flex: 1;
            padding: 30px;
            overflow-y: auto;
            background: url('https://images.unsplash.com/photo-1530026186672-2cd00ffc50fe?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80') no-repeat center center;
            background-size: cover;
            position: relative;
        }

            .main-content::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(248, 249, 255, 0.9);
                z-index: 0;
            }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            position: relative;
            z-index: 1;
        }

            .header h2 {
                font-weight: 700;
                color: var(--secondary-color);
                margin-bottom: 0;
                font-size: 1.8rem;
            }

        .user-profile {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .user-avatar {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid white;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        }

        .user-info {
            text-align: right;
        }

        .user-name {
            font-weight: 600;
            margin-bottom: 0;
            color: var(--secondary-color);
        }

        .user-role {
            font-size: 0.8rem;
            color: #6c757d;
            margin-bottom: 0;
        }

        /* Stats Cards */
        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
            position: relative;
            z-index: 1;
        }

        .stat-card {
            background: white;
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 20px;
            position: relative;
            overflow: hidden;
        }

            .stat-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 4px;
                height: 100%;
                background: var(--primary-color);
            }

            .stat-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1);
            }

        .stat-icon {
            width: 60px;
            height: 60px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.8rem;
            color: white;
        }

            .stat-icon.doctors {
                background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            }

            .stat-icon.patients {
                background: linear-gradient(135deg, var(--success-color), #4895ef);
            }

            .stat-icon.appointments {
                background: linear-gradient(135deg, var(--warning-color), #f3722c);
            }

            .stat-icon.requests {
                background: linear-gradient(135deg, var(--danger-color), #f72585);
            }

        .stat-info h3 {
            font-weight: 700;
            margin-bottom: 5px;
            color: var(--secondary-color);
            font-size: 1.8rem;
        }

        .stat-info p {
            color: #6c757d;
            margin-bottom: 0;
            font-size: 0.9rem;
        }

        /* Recent Appointments Card */
        .appointments-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.05);
            overflow: hidden;
            position: relative;
            z-index: 1;
        }

        .card-header {
            padding: 20px;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

            .card-header h3 {
                font-weight: 600;
                margin-bottom: 0;
                color: var(--secondary-color);
                display: flex;
                align-items: center;
                gap: 10px;
            }

                .card-header h3 i {
                    color: var(--primary-color);
                }

        .view-all {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 5px;
            transition: all 0.3s;
        }

            .view-all:hover {
                color: var(--secondary-color);
                transform: translateX(3px);
            }

        .table-responsive {
            border-radius: 0 0 12px 12px;
            overflow: hidden;
        }

        .table {
            margin-bottom: 0;
        }

            .table th {
                background: var(--primary-color);
                color: white;
                font-weight: 500;
                padding: 15px;
                text-transform: uppercase;
                font-size: 0.8rem;
                letter-spacing: 0.5px;
            }

            .table td {
                padding: 15px;
                vertical-align: middle;
                border-color: rgba(0, 0, 0, 0.05);
            }

        .badge {
            padding: 6px 12px;
            border-radius: 50px;
            font-weight: 500;
            font-size: 0.75rem;
        }

        .badge-success {
            background: rgba(76, 201, 240, 0.1);
            color: var(--success-color);
            border: 1px solid rgba(76, 201, 240, 0.3);
        }

        .badge-warning {
            background: rgba(248, 150, 30, 0.1);
            color: var(--warning-color);
            border: 1px solid rgba(248, 150, 30, 0.3);
        }

        .action-btn {
            padding: 6px 12px;
            border-radius: 6px;
            font-size: 0.8rem;
            display: inline-flex;
            align-items: center;
            gap: 5px;
            transition: all 0.3s;
            text-decoration: none;
        }

        .btn-view {
            background: rgba(67, 97, 238, 0.1);
            color: var(--primary-color);
            border: 1px solid rgba(67, 97, 238, 0.3);
        }

            .btn-view:hover {
                background: var(--primary-color);
                color: white;
            }

        /* Pet Type Indicators */
        .pet-type {
            display: inline-flex;
            align-items: center;
            gap: 5px;
            font-weight: 500;
        }

            .pet-type.dog {
                color: #4361ee;
            }

            .pet-type.cat {
                color: #f72585;
            }

        /* Responsive Adjustments */
        @@media (max-width: 1200px) {
            .sidebar {
                width: 80px;
            }

            .sidebar-header h4,
            .sidebar-header p,
            .sidebar-menu span,
            .logout-btn span {
                display: none;
            }

            .sidebar-menu a {
                justify-content: center;
                padding: 15px;
                margin: 5px 10px;
            }

            .sidebar-menu i {
                margin-right: 0;
                font-size: 1.3rem;
            }

            .logout-btn a {
                justify-content: center;
            }
        }

        @@media (max-width: 992px) {
            .app-container {
                flex-direction: column;
            }

            .sidebar {
                width: 100%;
                height: auto;
                padding: 10px 0;
            }

            .sidebar-menu {
                display: flex;
                flex-wrap: wrap;
                padding: 10px;
                justify-content: center;
            }

                .sidebar-menu a {
                    width: auto;
                    margin: 5px;
                    padding: 10px 15px;
                }

            .logout-btn {
                position: relative;
                margin-top: 10px;
            }

            .main-content {
                padding: 20px;
            }
        }

        @@media (max-width: 768px) {
            .header {
                flex-direction: column;
                align-items: flex-start;
                gap: 15px;
            }

            .user-profile {
                width: 100%;
                justify-content: flex-end;
            }

            .stats-container {
                grid-template-columns: 1fr;
            }
        }

        /* Animations */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .stat-card, .appointments-card {
            animation: fadeIn 0.6s ease forwards;
        }

            .stat-card:nth-child(1) {
                animation-delay: 0.1s;
            }

            .stat-card:nth-child(2) {
                animation-delay: 0.2s;
            }

            .stat-card:nth-child(3) {
                animation-delay: 0.3s;
            }

            .stat-card:nth-child(4) {
                animation-delay: 0.4s;
            }

        .appointments-card {
            animation-delay: 0.5s;
        }
        /* User panel styling for admin with sidebar */
        .user-panel {
            padding: 5px 10px;
            height: 60px;
            display: flex;
            align-items: center;
        }

            .user-panel .dropdown-toggle {
                color: #495057;
                transition: all 0.3s;
                padding: 5px 10px;
                border-radius: 4px;
            }

                .user-panel .dropdown-toggle:hover {
                    background-color: #f8f9fa;
                    text-decoration: none;
                }

        .user-avatar {
            color: #6c757d;
        }

        .user-name {
            font-weight: 500;
            color: #343a40;
        }

        /* Dropdown menu positioning */
        .dropdown-menu {
            border: 1px solid rgba(0,0,0,.15);
            min-width: 220px;
            z-index: 1001; /* Above sidebar */
        }

        /* Adjust for sidebar */
        .main-header {
            position: relative;
            z-index: 1030; /* Above sidebar */
        }
    </style>
</head>
<body>
    <div class="app-container">
        <!-- Sidebar Navigation -->
