                <a href="@Url.Action("IndexAdmin", "Pet_Boarding")">
                    <i class="fas fa-users"></i>
                    <span>Pet Boardings</span>
                </a>
                <a href="@Url.Action("Index", "Inventories")">
                    <i class="fas fa-users"></i>
                    <span>Inventory Management</span>
                </a>

                @*<a href="@Url.Action("AdminPayments", "Payment")">
            <i class="fas fa-chart-bar"></i>
            <span>Payments</span>
        </a>*@
                <a href="@Url.Action("Create", "TrainingType")">
                    <i class="fas fa-user-plus"></i>
