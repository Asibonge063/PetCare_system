@model IEnumerable<PetCare_system.Models.Inventory>

@{
    ViewBag.Title = "Index";
}

<h2>Inventory Management</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MedicationName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InventoryType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InventoryQuantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MedDiscription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MedicationName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InventoryType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InventoryQuantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MedDiscription)
        </td>
        <td>
            @Html.ActionLink("Add Stock", "AddStock", new { id = item.InventoryId }, new { @class = "btn btn-success btn-sm" }) |
            @Html.ActionLink("Sell/Remove", "SubtractStock", new { id = item.InventoryId }, new { @class = "btn btn-warning btn-sm" })
        </td>
    </tr>
}

</table>
