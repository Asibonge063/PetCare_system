@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <div class="user-panel d-flex align-items-center ms-auto" style="margin-right: 15px;">
            <div class="dropdown">
                <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    <div class="user-avatar me-2">
                        <i class="fas fa-user-circle fa-lg"></i>
                    </div>
                    <div class="user-info">
                        <span class="d-none d-md-inline user-name">@User.Identity.GetUserName()</span>
                    </div>
                </a>
                <ul class="dropdown-menu dropdown-menu-end position-absolute shadow" style="right: 0; left: auto; margin-top: 0.5rem;">
                    <li>
                        @Html.ActionLink("Manage Account", "Index", "Manage", null, new { @class = "dropdown-item d-flex align-items-center" })
                    </li>
                    <li><hr class="dropdown-divider m-0"></li>
                    <li>
                        <a class="dropdown-item d-flex align-items-center" href="javascript:document.getElementById('logoutForm').submit()">
                            <i class="fas fa-sign-out-alt me-2"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    }
}
else
{
    <div class="ms-auto d-flex align-items-center" style="margin-right: 15px;">
        <div class="nav-item me-2">
            @Html.ActionLink("Register", "Register", "Account", null, new { @class = "nav-link", id = "registerLink" })
        </div>
        <div class="nav-item">
            @Html.ActionLink("Login", "Login", "Account", null, new { @class = "nav-link", id = "loginLink" })
        </div>
    </div>
}