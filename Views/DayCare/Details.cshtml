@model PetCare_system.Models.DayCare

@{
    ViewBag.Title = "Day Care Details";
}

<div class="container-fluid px-4">
    <!-- Enhanced Header -->
    <div class="d-flex align-items-center justify-content-between mb-4 py-3 border-bottom">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-clipboard-list text-primary mr-2"></i>Day Care Reservation Details
            </h1>
            <small class="text-muted">Reservation #@Model.Id</small>
        </div>
       
    </div>

    <!-- Status Badge -->
    <div class="mb-4">
        <span class="badge @(Model.CheckOutDate.HasValue ? "badge-success" : "badge-primary") badge-pill py-2 px-3">
            <i class="fas @(Model.CheckOutDate.HasValue ? "fa-check-circle" : "fa-clock") mr-2"></i>
            @(Model.CheckOutDate.HasValue ? "Completed" : "Active")
        </span>
    </div>

    <div class="row">
        <!-- Owner Information Card - Enhanced -->
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0 py-3 d-flex align-items-center">
                    <div class="icon-circle bg-primary-light mr-3">
                        <i class="fas fa-user-tie text-primary"></i>
                    </div>
                    <h5 class="m-0 font-weight-bold text-gray-800">Owner Information</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-4">
                        <div class="avatar-circle bg-light mr-3">
                            <span class="initials">@Model.User.FirstName[0]@Model.User.LastName[0]</span>
                        </div>
                        <div>
                            <h5 class="mb-0">@Model.User.FirstName @Model.User.LastName</h5>
                            <span class="text-muted small">Pet Owner</span>
                        </div>
                    </div>

                    <div class="info-item mb-3">
                        <span class="info-label text-muted">Email</span>
                        <p class="info-value">@(Model.User?.Email ?? "N/A")</p>
                    </div>

                    <div class="info-item mb-3">
                        <span class="info-label text-muted">Phone</span>
                        <p class="info-value">@(Model.User?.CellphoneNumber ?? "N/A")</p>
                    </div>

                    <div class="info-item">
                        <span class="info-label text-muted">Membership</span>
                        <div class="info-value">
                            <span class="badge @(Model.Membership != null ? "badge-success-light text-success" : "badge-secondary-light text-secondary")">
                                @(Model.Membership?.MembershipType ?? "No Active Membership")
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Care Details Card - Enhanced -->
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0 py-3 d-flex align-items-center">
                    <div class="icon-circle bg-primary-light mr-3">
                        <i class="fas fa-paw text-primary"></i>
                    </div>
                    <h5 class="m-0 font-weight-bold text-gray-800">Care Details</h5>
                </div>
                <div class="card-body">
                    <div class="info-item mb-3">
                        <span class="info-label text-muted">Pet Name</span>
                        <p class="info-value d-flex align-items-center">
                            <i class="fas @(Model.Pet?.Breed == "Dog" ? "fa-dog" : "fa-cat") text-secondary mr-2"></i>
                            @(Model.Pet?.Name ?? "N/A")
                        </p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-item mb-3">
                                <span class="info-label text-muted">Check-in</span>
                                <p class="info-value">
                                    <i class="far fa-calendar-alt text-muted mr-2"></i>
                                    @Model.CheckInDate.ToString("MMM d, yyyy")
                                </p>
                                <small class="text-muted">@Model.CheckInDate.ToString("h:mm tt")</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            @if (Model.CheckOutDate.HasValue)
                            {
                                <div class="info-item mb-3">
                                    <span class="info-label text-muted">Check-out</span>
                                    <p class="info-value">
                                        <i class="far fa-calendar-alt text-muted mr-2"></i>
                                        @Model.CheckOutDate.Value.ToString("MMM d, yyyy")
                                    </p>
                                    <small class="text-muted">@Model.CheckOutDate.Value.ToString("h:mm tt")</small>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="info-item">
                        <span class="info-label text-muted">Special Instructions</span>
                        <div class="info-value">
                            @if (!string.IsNullOrEmpty(Model.SpecialInstructions))
                            {
                                <div class="alert alert-light border rounded p-3">
                                    @Model.SpecialInstructions
                                </div>
                            }
                            else
                            {
                                <span class="text-muted">No special instructions provided</span>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white border-0 d-flex justify-content-between">
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Back to List
                    </a>
                    @if (!Model.CheckOutDate.HasValue)
                    {
                        <a href="@Url.Action("CheckOut", new { id = Model.Id })" class="btn btn-primary">
                            <i class="bi bi-box-arrow-right me-1"></i>Check Out
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Base Card Styling */
        .card {
            border-radius: 0.5rem;
            transition: all 0.3s ease;
        }

            .card:hover {
                box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.1);
            }

        /* Icon Circles */
        .icon-circle {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .bg-primary-light {
            background-color: rgba(0, 123, 255, 0.1);
        }

        /* Avatar Styling */
        .avatar-circle {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            color: #fff;
            background-color: #6c757d;
        }

        .initials {
            font-size: 1rem;
            line-height: 1;
        }

        /* Info Item Styling */
        .info-item {
            margin-bottom: 1.25rem;
        }

        .info-label {
            display: block;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 0.25rem;
        }

        .info-value {
            font-size: 1rem;
            font-weight: 500;
            margin-bottom: 0;
            color: #343a40;
        }

        /* Badge Styling */
        .badge-success-light {
            background-color: rgba(40, 167, 69, 0.1);
        }

        .badge-secondary-light {
            background-color: rgba(108, 117, 125, 0.1);
        }

        /* Button Styling */
        .btn-outline-secondary {
            border-color: #dee2e6;
        }

        /* Responsive Adjustments */
        @@media (max-width: 992px) {
            .card {
                margin-bottom: 1.5rem;
            }
        }
    </style>
}