@model PetCare_system.Models.Pet

<h2>Are you sure you want to delete this pet?</h2>
<p><strong>Name:</strong> @Model.Name</p>
<p><strong>Breed:</strong> @Model.Breed</p>
<p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToString("dd MMM yyyy")</p>
<p><strong>Type:</strong> @Model.Type</p> <!-- Added the Type here -->

@using (Html.BeginForm("Delete", "Pet", FormMethod.Post))
{
    @Html.HiddenFor(model => model.Id)
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Dashboard", "Pet")" class="btn btn-secondary">Cancel</a>
}