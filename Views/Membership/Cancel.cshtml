@model PetCare_system.Models.Membership

@{
    ViewBag.Title = "Cancel Membership";
}

<div class="cancel-membership-container">
    <div class="cancel-header bg-danger text-white py-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="mb-3">
                        <i class="fas fa-times-circle mr-2"></i>Cancel Membership
                    </h1>
                    <p class="lead mb-0">We're sorry to see you go. Please review the details below before proceeding.</p>
                </div>
                <div class="col-md-4 text-right">
                    <div class="urgent-alert">
                        <i class="fas fa-exclamation-triangle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-4">
        <div class="confirmation-card card border-danger mb-4">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="fas fa-exclamation-triangle mr-2"></i>Important Notice</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-danger" role="alert">
                    <h5 class="alert-heading"><i class="fas fa-radiation mr-2"></i>Immediate Effects</h5>
                    <ul class="mb-0">
                        <li>All membership benefits will be suspended immediately</li>
                        <li>Automatic renewals will be canceled</li>
                        <li>Partial refunds may not be available</li>
                    </ul>
                </div>

                <div class="membership-details">
                    <h5 class="section-title text-danger mb-4"><i class="fas fa-paw mr-2"></i>Membership Details</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Pet Name:</dt>
                                <dd class="col-sm-7">@Html.DisplayFor(model => model.Pet.Name)</dd>

                                <dt class="col-sm-5">Membership Type:</dt>
                                <dd class="col-sm-7">@Html.DisplayFor(model => model.MembershipType)</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Start Date:</dt>
                                <dd class="col-sm-7">@Model.StartDate.ToString("MMMM d, yyyy")</dd>

                                <dt class="col-sm-5">End Date:</dt>
                                <dd class="col-sm-7">@Model.EndDate.ToString("MMMM d, yyyy")</dd>

                                <dt class="col-sm-5">Amount Paid:</dt>
                                <dd class="col-sm-7">@Model.PaymentAmount.ToString("C")</dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <div class="cancellation-terms mt-4">
                    <h5 class="text-danger"><i class="fas fa-file-contract mr-2"></i>Cancellation Terms</h5>
                    <ul class="text-muted">
                        <li>Processing may take up to 3 business days</li>
                        <li>Access to premium services ends immediately</li>
                        <li>No prorated refunds for unused time</li>
                    </ul>
                </div>
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="confirmation-actions">
                <div class="alert alert-warning" role="alert">
                    <h5 class="alert-heading"><i class="fas fa-check-circle mr-2"></i>Final Confirmation</h5>
                    <p class="mb-0">By clicking "Confirm Cancellation", you acknowledge that you've read and understand the cancellation terms.</p>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    @Html.ActionLink("Back to Details", "Details", new { id = Model.Id }, new { @class = "btn btn-secondary btn-lg" })
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="fas fa-trash-alt mr-2"></i>Confirm Cancellation
                    </button>
                </div>
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        .cancel-membership-container {
            padding-bottom: 3rem;
            background-color: #f8f9fa;
        }

        .cancel-header {
            padding: 2rem 0;
            margin-bottom: 2rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .urgent-alert {
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            width: 60px;
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-left: auto;
        }

        .confirmation-card {
            border-width: 2px;
            box-shadow: 0 0.5rem 1rem rgba(220, 53, 69, 0.15);
        }

        .section-title {
            border-bottom: 2px solid #dc3545;
            padding-bottom: 0.5rem;
            margin-bottom: 1.5rem;
        }

        dt {
            font-weight: 600;
            color: #6c757d;
        }

        dd {
            color: #212529;
        }

        .cancellation-terms {
            background: #fff8f9;
            border-radius: 0.5rem;
            padding: 1.5rem;
            margin-top: 2rem;
        }

        .confirmation-actions {
            background: white;
            border-radius: 0.5rem;
            padding: 2rem;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
        }

        @@media (max-width: 768px) {
            .cancel-header .col-md-4 {
                display: none;
            }

            .btn-lg {
                width: 100%;
                margin-top: 1rem;
            }

            .d-flex {
                flex-direction: column-reverse;
            }
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add confirmation dialog
            $('form').submit(function(e) {
                if (!confirm('Are you absolutely sure you want to cancel this membership? This action cannot be undone.')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}