@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/5.0.6/jquery.inputmask.min.js"></script>

    <script>
        $(document).ready(function () {
            // Plan Selection
            $('.plan-card').click(function () {
                $('.plan-card').removeClass('selected');
                $(this).addClass('selected');

                const type = $(this).data('type');
                const price = $(this).data('price');

                $('#SelectedMembershipType').val(type);
                $('#SelectedAmount').val(price);

                // Update selected plan display
                $('#selectedPlanDisplay').html(`
                                            <div class="selected-plan">
                                                <span class="plan-name">${type} Plan Selected</span>
                                                <span class="plan-price">R${price.toLocaleString()}</span>
                                            </div>
                                        `);

                $('#submitButton').prop('disabled', false);
            });
            // Interactive Payment Card
            $('#cardNumberInput').on('input', function () {
                let value = $(this).val();
                if (value) {
                    value = value.match(/.{1,4}/g).join(' ');
                    $('#cardNumberDisplay').text(value);
                } else {
                    $('#cardNumberDisplay').text('•••• •••• •••• ••••');
                }
            });

            $('#cardHolderInput').on('input', function () {
                const value = $(this).val();
                $('#cardHolderDisplay').text(value || 'YOUR NAME');
            });

            $('#cardExpiryInput').on('input', function () {
                const value = $(this).val();
                $('#cardExpiryDisplay').text(value || '••/••');
            });

            $('#cardCvvInput').on('focus', function () {
                $('.payment-card').css('transform', 'rotateY(180deg)');
            }).on('blur', function () {
                $('.payment-card').css('transform', 'rotateY(0deg)');
            });

            // Payment Method Toggle
            $('input[name="PaymentMethod"]').change(function () {
                if ($(this).val() === 'Credit Card') {
                    $('#creditCardFields').show();
                } else {
                    $('#creditCardFields').hide();
                }
            }).trigger('change');

            // Datepicker
            $('.datepicker').datepicker({
                format: 'yyyy-mm-dd',
                autoclose: true,
                todayHighlight: true
            });

            // Input Masking
            $('#AccountNumber').inputmask('9999 9999 9999 9999');
            $('#ExpiryDateMMYY').inputmask('99/99');
            $('#CVV').inputmask('999');

            // Expiry Date Conversion
            $('#ExpiryDateMMYY').on('change', function () {
                const [month, year] = $(this).val().split('/');
                if (month && year) {
                    const fullDate = new Date(`20${year}`, month - 1);
                    $('#ExpiryDate').val(fullDate.toISOString());
                }
            });
        });
    </script>
}
