@model PetCare_system.Models.MembershipViewModel

@{
    ViewBag.Title = "Renew Membership";
    var currentEndDate = ViewBag.CurrentEndDate != null ? ((DateTime)ViewBag.CurrentEndDate).ToString("MMMM d, yyyy") : "N/A";
    var daysRemaining = ViewBag.CurrentEndDate != null ? ((DateTime)ViewBag.CurrentEndDate - DateTime.Today).Days : 0;
}

<div class="renewal-container">
    <!-- Header Section -->
    <div class="renewal-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="renewal-title">
                        <i class="fas fa-sync-alt renewal-icon"></i> Renew Membership
                    </h1>
                    <p class="renewal-subtitle">Continue premium care for your beloved pet</p>
                </div>
                <div class="col-md-4 text-right">
                    <div class="expiry-badge">
                        <span class="badge-text">Expires in</span>
                        <span class="badge-days">@daysRemaining days</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container renewal-content">
        <!-- Current Status Card -->
        <div class="current-status-card">
            <div class="status-content">
                <div class="status-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="status-details">
                    <h4>Your Current Membership</h4>
                    <p>Expires on <strong>@currentEndDate</strong></p>
                </div>
            </div>
            
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.PetId)
            @Html.HiddenFor(model => model.MembershipType, new { id = "SelectedMembershipType" })
            @Html.HiddenFor(model => model.AmountPaid, new { id = "SelectedAmount" })

            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            <!-- Plan Selection Section -->
            <div class="plan-selection-section">
                <h3 class="section-title">
                    <i class="fas fa-star"></i> Choose Your Plan
                </h3>
                <p class="section-subtitle">Select the membership plan that fits your pet's needs</p>

                <div class="row">
                    <!-- Weekly Plan -->
                    <div class="col-lg-4 mb-4">
                        <div class="plan-card" data-type="Weekly" data-price="250">
                            <div class="plan-header">
                                <h4>Weekly</h4>
                                <div class="plan-price">
                                    <span class="currency">R</span>250
                                    <span class="period">/week</span>
                                </div>
                            </div>
                            <div class="plan-body">
                                <ul class="plan-features">
                                    <li><i class="fas fa-check"></i> Basic grooming services</li>
                                    <li><i class="fas fa-check"></i> Health check</li>
                                    <li><i class="fas fa-check"></i> 7-day access</li>
                                    <li><i class="fas fa-check"></i> Email support</li>
                                </ul>
                            </div>
                            <div class="plan-footer">
                                <button type="button" class="btn btn-outline-primary select-plan">Select Plan</button>
                            </div>
                        </div>
                    </div>

                    <!-- Monthly Plan (Featured) -->
                    <div class="col-lg-4 mb-4">
                        <div class="plan-card featured" data-type="Monthly" data-price="850">
                            <div class="popular-badge">Most Popular</div>
                            <div class="plan-header">
                                <h4>Monthly</h4>
                                <div class="plan-price">
                                    <span class="currency">R</span>850
                                    <span class="period">/month</span>
                                </div>
                                <div class="savings">Save 15%</div>
                            </div>
                            <div class="plan-body">
                                <ul class="plan-features">
                                    <li><i class="fas fa-check"></i> All Weekly benefits</li>
                                    <li><i class="fas fa-check"></i> Premium grooming</li>
                                    <li><i class="fas fa-check"></i> Dental check</li>
                                    <li><i class="fas fa-check"></i> Priority booking</li>
                                </ul>
                            </div>
                            <div class="plan-footer">
                                <button type="button" class="btn btn-primary select-plan">Select Plan</button>
                            </div>
                        </div>
                    </div>

                    <!-- Yearly Plan -->
                    <div class="col-lg-4 mb-4">
                        <div class="plan-card" data-type="Yearly" data-price="8500">
                            <div class="best-value-badge">Best Value</div>
                            <div class="plan-header">
                                <h4>Yearly</h4>
                                <div class="plan-price">
                                    <span class="currency">R</span>8,500
                                    <span class="period">/year</span>
                                </div>
                                <div class="savings">Save 20%</div>
                            </div>
                            <div class="plan-body">
                                <ul class="plan-features">
                                    <li><i class="fas fa-check"></i> All Monthly benefits</li>
                                    <li><i class="fas fa-check"></i> Unlimited visits</li>
                                    <li><i class="fas fa-check"></i> 24/7 emergency</li>
                                    <li><i class="fas fa-check"></i> Free annual checkup</li>
                                </ul>
                            </div>
                            <div class="plan-footer">
                                <button type="button" class="btn btn-outline-primary select-plan">Select Plan</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Payment Section -->
            <div class="payment-section">
                <h3 class="section-title">
                    <i class="fas fa-credit-card"></i> Payment Information
                </h3>

                <div class="selected-plan-display" id="selectedPlanDisplay">
                    <div class="no-plan">
                        <i class="fas fa-info-circle"></i> No plan selected yet
                    </div>
                </div>

                <!-- Modern Payment Card UI -->
                <div class="payment-card-container">
                    <div class="payment-card-wrapper">
                        <div class="payment-card">
                            <div class="card-front">
                                <div class="card-logos">
                                    <div class="visa-logo">
                                        <svg viewBox="0 0 48 48">
                                            <path fill="#1565C0" d="M45,35c0,2.209-1.791,4-4,4H7c-2.209,0-4-1.791-4-4V13c0-2.209,1.791-4,4-4h34c2.209,0,4,1.791,4,4V35z" />
                                            <path fill="#FFF" d="M15.186 19l-2.626 7.832c0 0-.667-3.313-.733-3.729-1.495-3.411-3.701-3.221-3.701-3.221L10.726 30v-.002h3.161L18.258 19H15.186zM17.689 30L20.56 30 22.296 19 19.389 19zM38.008 19h-3.021l-4.71 11h2.852l.588-1.571h3.596L37.619 30h2.613L38.008 19zM34.513 26.328l1.563-4.157.818 4.157H34.513zM26.369 22.206c0-.606.498-1.057 1.926-1.057.928 0 1.991.674 1.991.674l.466-2.309c0 0-1.358-.515-2.691-.515-3.019 0-4.576 1.444-4.576 3.272 0 3.306 3.979 2.853 3.979 4.551 0 .291-.231.964-1.888.964-1.662 0-2.759-.609-2.759-.609l-.495 2.216c0 0 1.063.606 3.117.606 2.059 0 4.915-1.54 4.915-3.752C30.354 23.586 26.369 23.12 26.369 22.206z" />
                                            <path fill="#FFC107" d="M12.212,24.945l-0.966-4.748c0,0-0.437-1.029-1.573-1.029c-1.136,0-4.44,0-4.44,0S10.894,20.84,12.212,24.945z" />
                                        </svg>
                                    </div>
                                    <div class="mastercard-logo">
                                        <svg viewBox="0 0 48 48">
                                            <circle cx="24" cy="24" r="20" fill="#FF9800" />
                                            <circle cx="24" cy="24" r="16" fill="#D84315" />
                                            <circle cx="24" cy="24" r="12" fill="#4CAF50" />
                                        </svg>
                                    </div>
                                </div>
                                <div class="card-chip">
                                    <div class="chip-line"></div>
                                    <div class="chip-line"></div>
                                    <div class="chip-line"></div>
                                    <div class="chip-line"></div>
                                    <div class="chip-main"></div>
                                </div>
                                <div class="card-number">
                                    <div class="card-number-field" id="cardNumberDisplay">•••• •••• •••• ••••</div>
                                </div>
                                <div class="card-details">
                                    <div class="card-holder">
                                        <label>Card Holder</label>
                                        <div class="card-holder-field" id="cardHolderDisplay">YOUR NAME</div>
                                    </div>
                                    <div class="card-expiry">
                                        <label>Expires</label>
                                        <div class="card-expiry-field" id="cardExpiryDisplay">••/••</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Payment Form -->
                    <div class="payment-form">
                        <div class="form-group">
                            @Html.LabelFor(model => model.AccountNumber, htmlAttributes: new { @class = "control-label" })
                            <div class="input-group">
                                @Html.EditorFor(model => model.AccountNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "1234 5678 9012 3456", id = "cardNumberInput" } })
                                <div class="input-group-append">
                                    <span class="input-group-text"><i class="far fa-credit-card"></i></span>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.AccountNumber, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.AccountHolder, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.AccountHolder, new { htmlAttributes = new { @class = "form-control", placeholder = "Cardholder Name", id = "cardHolderInput" } })
                            @Html.ValidationMessageFor(model => model.AccountHolder, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                @Html.LabelFor(model => model.ExpiryDate, htmlAttributes: new { @class = "control-label" })
                                @Html.TextBox("ExpiryDateMMYY", Model.ExpiryDate.HasValue ? $"{Model.ExpiryDate.Value.Month:D2}/{Model.ExpiryDate.Value.Year % 100:D2}" : "", new { @class = "form-control", placeholder = "MM/YY", id = "cardExpiryInput" })
                                @Html.HiddenFor(model => model.ExpiryDate)
                                @Html.ValidationMessageFor(model => model.ExpiryDate, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col-md-6">
                                @Html.LabelFor(model => model.CVV, htmlAttributes: new { @class = "control-label" })
                                <div class="input-group">
                                    @Html.EditorFor(model => model.CVV, new { htmlAttributes = new { @class = "form-control", placeholder = "CVV", id = "cardCvvInput" } })
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    </div>
                                </div>
                                @Html.ValidationMessageFor(model => model.CVV, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Card Type Selection -->
                        <div class="form-group">
                            <label>Card Type</label>
                            <div class="card-type-options">
                                <label class="card-option">
                                    <input type="radio" name="BankType" value="Visa" checked>
                                    <div class="card-logo">
                                        <i class="fab fa-cc-visa"></i>
                                        <span>Visa</span>
                                    </div>
                                </label>
                                <label class="card-option">
                                    <input type="radio" name="BankType" value="Mastercard">
                                    <div class="card-logo">
                                        <i class="fab fa-cc-mastercard"></i>
                                        <span>Mastercard</span>
                                    </div>
                                </label>
                                <label class="card-option">
                                    <input type="radio" name="BankType" value="American Express">
                                    <div class="card-logo">
                                        <i class="fab fa-cc-amex"></i>
                                        <span>Amex</span>
                                    </div>
                                </label>
                                <label class="card-option">
                                    <input type="radio" name="BankType" value="Debit">
                                    <div class="card-logo">
                                        <i class="fas fa-credit-card"></i>
                                        <span>Debit</span>
                                    </div>
                                </label>
                            </div>
                            @Html.ValidationMessageFor(model => model.BankType, "", new { @class = "text-danger" })
                        </div>

                        <!-- Payment Date -->
                        <div class="form-group payment-date-group">
                            @Html.LabelFor(model => model.PaymentDate, htmlAttributes: new { @class = "control-label" })
                            <div class="input-group">
                                @Html.EditorFor(model => model.PaymentDate, new { htmlAttributes = new { @class = "form-control datepicker", placeholder = "Select payment date" } })
                                <div class="input-group-append">
                                    <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.PaymentDate, "", new { @class = "text-danger" })
                        </div>

                        <!-- Submit Button -->
                        <div class="form-group submit-section">
                            <button type="submit" class="btn btn-renewal" id="submitButton" disabled>
                                <i class="fas fa-check-circle"></i> Complete Renewal
                            </button>
                            <p class="secure-message">
                                <i class="fas fa-lock"></i> Your payment is secure and encrypted with 256-bit SSL
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
  
<!-- Current Benefits Modal -->
<div class="modal fade" id="currentBenefitsModal" tabindex="-1" role="dialog" aria-labelledby="currentBenefitsModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="currentBenefitsModalLabel">Current Membership Benefits</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <ul class="benefits-list">
                    <li><i class="fas fa-check text-success"></i> Regular health checkups</li>
                    <li><i class="fas fa-check text-success"></i> Basic grooming services</li>
                    <li><i class="fas fa-check text-success"></i> 10% discount on pet products</li>
                    <li><i class="fas fa-check text-success"></i> Priority appointment scheduling</li>
                    <li><i class="fas fa-check text-success"></i> Monthly health reports</li>
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
    <style>
        /* Base Styles */
        :root {
            --primary-color: #4e73df;
            --secondary-color: #1cc88a;
            --warning-color: #f6c23e;
            --danger-color: #e74a3b;
            --dark-color: #5a5c69;
            --light-color: #f8f9fc;
        }

        body {
            background-color: #f8f9fc;
            font-family: 'Nunito', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            color: #5a5c69;
        }

        .renewal-container {
            padding-bottom: 3rem;
        }

        /* Header Section */
        .renewal-header {
            background: linear-gradient(135deg, var(--primary-color), #224abe);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
            box-shadow: 0 4px 20px 0 rgba(0, 0, 0, 0.1);
        }

        .renewal-title {
            font-weight: 700;
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        .renewal-icon {
            margin-right: 0.8rem;
        }

        .renewal-subtitle {
            font-size: 1.1rem;
            opacity: 0.9;
            margin-bottom: 0;
        }

        .expiry-badge {
            display: inline-block;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50px;
            padding: 0.5rem 1rem;
            text-align: center;
        }

        .badge-text {
            display: block;
            font-size: 0.8rem;
            opacity: 0.8;
        }

        .badge-days {
            font-size: 1.5rem;
            font-weight: 700;
            line-height: 1;
        }

        /* Current Status Card */
        .current-status-card {
            background: white;
            border-radius: 0.5rem;
            padding: 1.5rem;
            margin-bottom: 2rem;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
            display: flex;
            align-items: center;
            justify-content: space-between;
            border-left: 4px solid var(--warning-color);
        }

        .status-content {
            display: flex;
            align-items: center;
        }

        .status-icon {
            background-color: #fdf6e3;
            color: var(--warning-color);
            width: 3.5rem;
            height: 3.5rem;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1.5rem;
            font-size: 1.5rem;
        }

        .status-details h4 {
            font-weight: 600;
            margin-bottom: 0.25rem;
            color: var(--dark-color);
        }

        .status-details p {
            margin-bottom: 0;
            color: #6e707e;
        }

        .status-actions .btn {
            min-width: 120px;
        }

        /* Plan Cards */
        .plan-card {
            background: white;
            border-radius: 0.5rem;
            padding: 1.5rem;
            position: relative;
            transition: transform 0.3s ease;
            border: 1px solid #e3e6f0;
        }

            .plan-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
            }

            .plan-card.featured {
                border-color: var(--primary-color);
                box-shadow: 0 0 2rem rgba(78, 115, 223, 0.2);
            }

        .popular-badge, .best-value-badge {
            position: absolute;
            top: -10px;
            right: 10px;
            background: var(--secondary-color);
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 50px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .best-value-badge {
            background: var(--warning-color);
        }

        .plan-header {
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .plan-price {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary-color);
        }

        .period {
            font-size: 1rem;
            color: #858796;
        }

        .savings {
            color: var(--secondary-color);
            font-weight: 600;
            margin-top: 0.5rem;
        }

        /* Payment Section */
        .selected-plan-display {
            background: #f8f9fc;
            border-radius: 0.5rem;
            padding: 1rem;
            margin-bottom: 1.5rem;
            border: 2px dashed #e3e6f0;
        }

        .no-plan {
            text-align: center;
            color: #858796;
        }

        /* Responsive Adjustments */
        @@media (max-width: 768px) {
            .renewal-header .col-md-4 {
                text-align: left !important;
                margin-top: 1rem;
            }

            .plan-card {
                margin-bottom: 1rem;
            }
        }
        /* Payment Card Styles */
.payment-card-container {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin-bottom: 2rem;
}

.payment-card-wrapper {
    perspective: 1000px;
    width: 100%;
    max-width: 420px;
    margin: 0 auto;
}

.payment-card {
    width: 100%;
    height: 240px;
    position: relative;
    transform-style: preserve-3d;
    transition: all 0.6s ease;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
}

.card-front {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #4a6cf7, #2541b2);
    border-radius: 15px;
    padding: 1.5rem;
    color: white;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    backface-visibility: hidden;
    position: absolute;
    top: 0;
    left: 0;
}

.card-logos {
    display: flex;
    justify-content: flex-end;
    gap: 10px;
}

.card-logos svg {
    width: 50px;
    height: 30px;
}

.card-chip {
    position: relative;
    width: 50px;
    height: 40px;
    background: linear-gradient(135deg, #ddb900, #ffde34);
    border-radius: 5px;
    display: flex;
    flex-wrap: wrap;
    padding: 5px;
}

.chip-line {
    width: 100%;
    height: 5px;
    background: rgba(0, 0, 0, 0.2);
    margin: 2px 0;
    border-radius: 2px;
}

.chip-main {
    position: absolute;
    width: 30px;
    height: 20px;
    border: 2px solid rgba(255, 255, 255, 0.5);
    border-radius: 3px;
    top: 10px;
    left: 10px;
}

.card-number {
    font-size: 1.4rem;
    letter-spacing: 2px;
    text-align: center;
    margin: 1rem 0;
    font-family: 'Courier New', monospace;
    font-weight: bold;
}

.card-details {
    display: flex;
    justify-content: space-between;
}

.card-holder, .card-expiry {
    display: flex;
    flex-direction: column;
}

.card-holder label, .card-expiry label {
    font-size: 0.7rem;
    opacity: 0.8;
    margin-bottom: 0.3rem;
}

.card-holder-field, .card-expiry-field {
    font-size: 1rem;
    letter-spacing: 1px;
    font-weight: bold;
}

/* Payment Form Styles */
.payment-form {
    background: white;
    border-radius: 10px;
    padding: 2rem;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
}

.card-type-options {
    display: flex;
    gap: 10px;
    margin-top: 10px;
}

.card-option {
    flex: 1;
}

.card-option input {
    display: none;
}

.card-option input:checked + .card-logo {
    border-color: var(--primary-color);
    background-color: rgba(78, 115, 223, 0.1);
}

.card-logo {
    border: 2px solid #e3e6f0;
    border-radius: 8px;
    padding: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.card-logo i {
    font-size: 1.5rem;
}

.card-logo .fa-cc-visa {
    color: #1a1f71;
}

.card-logo .fa-cc-mastercard {
    color: #eb001b;
}

.card-logo .fa-cc-amex {
    color: #016fd0;
}

.card-logo .fa-credit-card {
    color: var(--primary-color);
}

/* Interactive Card Elements */
#cardNumberInput, #cardHolderInput, #cardExpiryInput, #cardCvvInput {
    transition: all 0.3s ease;
}

#cardNumberInput:focus, #cardHolderInput:focus, #cardExpiryInput:focus, #cardCvvInput:focus {
    border-color: var(--primary-color);
    box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
}

/* Responsive Adjustments */
@@media (max-width: 768px) {
    .payment-card {
        height: 200px;
    }

    .card-number {
        font-size: 1.1rem;
    }

